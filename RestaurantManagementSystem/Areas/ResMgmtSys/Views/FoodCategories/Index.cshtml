@model IEnumerable<RestaurantManagementSystem.Models.FoodCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FoodCategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FoodCategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FoodCategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FoodCategoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FoodCategoryId">Delete</a>|
                <a asp-area="ResMgmtSys" asp-controller="FoodItems" 
                       asp-action="GetFoodsOfCategory" 
                       asp-route-filterCategoryId="@item.FoodCategoryId">Manage Foods</a>
            </td>
        </tr>
}
    </tbody>
</table>
